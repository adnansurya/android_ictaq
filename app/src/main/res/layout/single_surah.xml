<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/stdMargin0"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/stdMargin0"
            >
            <TextView
                android:id="@+id/nomorTxt"
                android:layout_width="@dimen/stdMargin5"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/stdMargin0"
                android:layout_marginEnd="@dimen/stdMargin0"
                android:layout_alignBottom="@+id/typeTxt"
                android:textSize="@dimen/itemMediumTxt"
                android:textStyle="bold"
                android:text="@string/number"/>

            <TextView
                android:id="@+id/surahTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/nomorTxt"
                android:layout_toEndOf="@+id/nomorTxt"
                android:text="@string/surah"
                android:textSize="@dimen/itemLargeTxt"/>


            <TextView
                android:id="@+id/asmaTxt"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ayatTxt"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/itemLargeTxt"
                android:textStyle="bold"
                android:text="@string/asma"/>

            <TextView
                android:id="@+id/artiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/surahTxt"
                android:layout_toRightOf="@+id/nomorTxt"
                android:layout_toEndOf="@+id/nomorTxt"
                android:textSize="@dimen/itemSmallTxt"
                android:textStyle="italic"
                android:text="@string/meaning"/>

            <TextView
                android:id="@+id/ayatTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/typeTxt"
                android:layout_toEndOf="@id/typeTxt"
                android:layout_alignBottom="@+id/typeTxt"
                android:layout_marginLeft="5dp"
                android:text="@string/ayat"
                android:textSize="@dimen/itemMediumTxt"/>

            <TextView
                android:id="@+id/typeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nomorTxt"
                android:layout_toEndOf="@+id/nomorTxt"
                android:layout_below="@+id/artiTxt"
                android:text="@string/type"
                android:textSize="@dimen/itemMediumTxt"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>