<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRequest"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/stdMargin1"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/stdMargin1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tanggalTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/sent"
                        android:textStyle="bold"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/stdMargin1"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/stdMargin1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/typeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data"
                        android:textSize="@dimen/itemMediumTxt"
                        android:gravity="right"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/stdLine1"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/name"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/namaTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/name"
                        android:layout_marginBottom="@dimen/stdMargin0"/>
                    <LinearLayout
                        android:id="@+id/personLay"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/stdLine"
                            android:background="#c0c0c0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/occupation"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/pekerjaanTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/occupation"
                            android:layout_marginBottom="@dimen/stdMargin0"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/stdLine"
                            android:background="#c0c0c0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/address"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/alamatTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/address"
                            android:layout_marginBottom="@dimen/stdMargin0"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/stdLine"
                            android:background="#c0c0c0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/birthdate"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tgl_lahirTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/birthdate"
                            android:layout_marginBottom="@dimen/stdMargin0"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/stdLine"
                            android:background="#c0c0c0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/parentname"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/ayah_ibuTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/parentname"
                            android:layout_marginBottom="@dimen/stdMargin0"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/stdLine"
                            android:background="#c0c0c0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/startyear"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tahunTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/stdSmallTxt"
                            android:text="@string/startyear"
                            android:layout_marginBottom="@dimen/stdMargin0"/>

                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/kontakCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/stdMargin1"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/stdMargin1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact"
                        android:textSize="@dimen/itemMediumTxt"
                        android:gravity="right"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/stdLine1"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/email"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/emailTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/email"
                        android:layout_marginBottom="@dimen/stdMargin0"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/stdLine"
                        android:background="#c0c0c0"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/telp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/telpTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/stdSmallTxt"
                        android:text="@string/telp"
                        android:layout_marginBottom="@dimen/stdMargin0"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>